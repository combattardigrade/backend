extends layout.pug

block header
    include header
    

block content   
    .container-fuild                          
        .row.mt-4
            div(class='col-sm-12 col-md-5 offset-md-1')
                h3.mt-3 AÃ±adir nuevo Scooter
                form(action='' method='post')                    
                    if serverMsg                        
                        if serverMsg.message
                            label(style='color:red;font-weight:bold') #{serverMsg.message}
                        else
                            label(style='color:#007bff;font-weight:bold') #{JSON.stringify(serverMsg)}
                        
                    .input-group.mb-3
                        .input-group-prepend
                            span.input-group-text Code                               
                        input(name='code' type='text' class='form-control' placeholder='Code')
                    .input-group.mb-3
                        .input-group-prepend
                            span.input-group-text Batch                                
                        input(name='batch' type='text' class='form-control' placeholder='Batch')
                    .input-group.mb-3
                        .input-group-prepend
                            span.input-group-text Birthday                               
                        input(name='birthday' id='datepicker' type='text' class='form-control' placeholder='Birthday')
                    .input-group.mb-3
                        .input-group-prepend
                            span.input-group-text City                                
                        input(name='city' type='text' class='form-control' placeholder='City' )
                    .input-group.mb-3
                        .input-group-prepend
                            span.input-group-text Status                                
                        input(name='status' type='text' class='form-control' placeholder='Status' )
                                         
                    input(type='hidden' value=csrf name='_csrf')
                    input(type='submit' class='btn btn-primary' value='Enviar')
block script
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    script.
        $(document).ready(function(){
           $('#datepicker').daterangepicker({
               singleDatePicker: true,
               showDropdowns: true,               
           })
        })
                        
        
        

        
            
                            